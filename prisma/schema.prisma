generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tasksAsAssignee Task[] @relation("TaskAssignee")
}

model Customer {
  id         String    @id @default(cuid())
  name       String
  email      String?
  phone      String?
  company    String?
  sector     String?
  notes      String?
  archivedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  projects      Project[]
  appointments  Appointment[]
  transactions  Transaction[]
}

model Project {
  id          String    @id @default(cuid())
  name        String
  customerId  String?
  customer    Customer? @relation(fields: [customerId], references: [id])
  status      String    @default("active")
  priority    String    @default("medium")
  startAt     DateTime?
  dueAt       DateTime?
  budgetKurus Int       @default(0)
  notes       String?
  archivedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  tasks Task[]
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      String    @default("bekleyen")
  priority    String    @default("medium")
  dueAt       DateTime?
  order       Int       @default(0)
  assigneeId  String?
  assignee    User?     @relation("TaskAssignee", fields: [assigneeId], references: [id])
  projectId   String?
  project     Project?   @relation(fields: [projectId], references: [id])
  archivedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Appointment {
  id          String    @id @default(cuid())
  title       String
  type        String    @default("crm")
  startAt     DateTime
  endAt       DateTime
  customerId  String?
  customer    Customer? @relation(fields: [customerId], references: [id])
  notes       String?
  meetLink    String?
  archivedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Transaction {
  id          String    @id @default(cuid())
  type        String
  amountKurus Int
  dateAt      DateTime
  customerId  String?
  customer    Customer? @relation(fields: [customerId], references: [id])
  notes       String?
  archivedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
